{{#link-to "contacts.create" class="pure-button pure-button-primary"}}Create contact{{/link-to}}

<table class="pure-table pure-table-striped contact-list">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each contact in controller}}
        <tr>
            <td>
                {{#link-to "contacts.details" contact}}
                    {{contact.name}}
                {{/link-to}}
            </td>
            <td>
                {{#link-to "contacts.edit" contact}}
                    <i class="fa fa-edit"></i>
                {{/link-to}}
            </td>
            <td>
                <button {{action "delete" contact}} class="button-warning pure-button">
                    <i class="fa fa-remove"></i>
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
